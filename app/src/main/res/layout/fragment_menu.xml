<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_go_to_fragment_windows"
        android:layout_width="272dp"
        android:layout_height="72dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="84dp"
        android:layout_weight="1"
        android:onClick="openMainWindow"
        android:text="@string/go_to_fragment_windows"
        app:layout_constraintBottom_toTopOf="@+id/btn_go_to_activity_windows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_go_to_material" />

    <Button
        android:id="@+id/btn_go_to_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:layout_weight="1"
        android:onClick="onClickOpenMaterial"
        android:text="@string/go_to_material"
        app:layout_constraintBottom_toTopOf="@+id/btn_go_to_fragment_windows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_go_to_recycler" />

    <Button
        android:id="@+id/btn_go_to_recycler"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="113dp"
        android:layout_weight="1"
        android:onClick="onClickOpenRecycler"
        android:text="@string/btn_go_to_recycler"
        app:layout_constraintBottom_toTopOf="@+id/btn_go_to_material"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_to_activity_windows"
        android:layout_width="256dp"
        android:layout_height="73dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:onClick="onClickOpenActivityWindows"
        android:text="@string/go_to_activity_windows"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_go_to_fragment_windows" />
</androidx.constraintlayout.widget.ConstraintLayout>