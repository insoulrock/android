<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCFF"
    android:orientation="vertical">

    <Button
    android:id="@+id/btn_go_to_fragment_windows"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:onClick="openMainWindow"
    android:text="@string/go_to_fragment_windows" />

    <Button
        android:id="@+id/btn_go_to_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickOpenMaterial"
        android:text="@string/go_to_material" />

    <Button

        android:id="@+id/btn_go_to_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickOpenRecycler"
        android:text="@string/btn_go_to_recycler" />


    <Button

        android:id="@+id/btn_go_to_activity_windows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickOpenActivityWindows"
        android:text="@string/go_to_activity_windows" />

</LinearLayout>